{
	"name": "wikimedia/excimer-ui-client",
	"description": "Excimer UI profile collector and client",
	"license": "Apache-2.0",
	"homepage": "https://gerrit.wikimedia.org/g/performance/excimer-ui-client",
	"authors": [
		{
			"name": "Tim Starling",
			"email": "tstarling@wikimedia.org"
		}
	],
	"require": {
		"php": ">=8.1",
		"ext-excimer": "*",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-zlib": "*"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.17.0",
		"mediawiki/minus-x": "1.1.3",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "9.6.22",
		"wikimedia/testing-access-wrapper": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"Wikimedia\\ExcimerUI\\Client\\": "src/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"platform": {
			"ext-excimer": "1.1.1"
		}
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"@phpcs",
			"@phan",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"phan": "phan --allow-polyfill-parser",
		"fix": [
			"minus-x fix .",
			"phpcbf .",
			"phpcbf"
		],
		"phpcs": "phpcs -sp ."
	}
}
